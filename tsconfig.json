{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],

  "compilerOptions": {
    "paths": {
      "$components/*": ["./src/components/*"],
      "$lib/*": ["./src/lib/*"],
      "$stores/*": ["./src/stores/*"],
      "$workers/*": ["./src/workers/*"]
    }
  }
}
